<Page x:Class="GeoSports.WPF.View.OSLHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoSports.WPF.View"
      xmlns:vm="clr-namespace:GeoSports.WPF.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="OpenSportLog Home"
      Name="OSLHomePage"
      DataContext="{Binding Home, Source={StaticResource Locator}}">
    <Grid Margin="20,20,20,20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <Button Width="150" Name="btnOpenFile" Content="Open logbook" Command="{Binding OpenFileCommand}" Margin="5"></Button>
            <Button Width="150" Name="btnNewFile" Content="New logbook" Command="{Binding NewFileCommand}" Margin="5"></Button>
            <Button Width="150" Name="btnQuit" Content="Quit" Command="{Binding QuitCommand}" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Page>
